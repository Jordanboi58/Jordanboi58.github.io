    {
      "transform": [
        {
          "regression": "Average_rate_of_atleast2_level3_qual_percentagerate",
          "on": "Potential_number_of_orgaised_crimes_as_percentage_of_region_population",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
