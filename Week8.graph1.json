{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "data": {
       "url": "https://raw.githubusercontent.com/Jordanboi58/Jordanboi58.github.io/main/data_ONSweek8.json",
       "format": {
           "type":"json",
           "property": "years"}},


    "title": {
        "text": "Flow of Short term loans in the UK",
        "subtitle": "Short term loans is the most likely loan method if investors were using borrowing to invest in crypto. ",
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"},

    "width":2000,
    "height":200,

    "mark":{
        "type": "line",
        "color":"seagreen",
        "strokeWidth":2,
        "opacity":1},
 

    "encoding": {
      "x": {
          "field": "date",
          "type": "nominal",
          "title": "Year"},
      "y": {
          "scale": {"domain": [0, 40000]},
          "field": "value",
          "type": "quantitative",
          "title": "Value of loans Dispersed"}
    }
}